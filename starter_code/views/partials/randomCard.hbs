<div class="card-random">
    <div>
        <img class="card-img" src="{{this.image_url}}" alt="">
    </div>
    <div class="card-body">
        <h2 class="card-title">{{this.name}}</h2>
        <p>{{this.tagline}}</p>
        <p class="card-text">{{this.description}}</p>
        <p><strong>Food Pairing</strong></p>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewers Tips: </strong>{{this.brewers_tips}}</p>
    </div>
</div>